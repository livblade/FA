<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Trustmate - Become a Seller</title>

  <!-- Optional font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

  <style>
    :root{
      --text:#111;
      --muted:#777;
      --line:#d9d9d9;
      --nav:#f6f6f6;
      --btn1:#0b0f2a;
      --btn2:#070a1f;
      --bg:#fff;
      --border:#cfcfcf;
    }

    *{ box-sizing:border-box; }
    body{
      margin:0;
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      color:var(--text);
      background:var(--bg);
    }

    /* ===== Top header (same as before) ===== */
    .topbar{
      height:84px;
      background:var(--nav);
      border-bottom:1px solid var(--line);
      display:flex;
      align-items:center;
      justify-content:space-between;
      padding:0 56px;
    }
    .brand{
      display:flex;
      align-items:center;
      gap:14px;
      font-weight:800;
      letter-spacing:1px;
      font-size:44px;
      line-height:1;
      color:#111;
    }
    .brand .mark{ width:34px; height:34px; display:inline-block; }

    .nav{
      display:flex;
      align-items:center;
      gap:22px;
      font-weight:600;
      color:#666;
      font-size:22px;
    }
    .nav a{
      text-decoration:none;
      color:#666;
    }
    .nav a:hover{ color:#111; }

    .dropdown{
      display:inline-flex;
      align-items:center;
      gap:10px;
      color:#666;
    }
    .caret{
      width:0;height:0;
      border-left:7px solid transparent;
      border-right:7px solid transparent;
      border-top:8px solid #777;
      transform: translateY(2px);
    }

    /* ===== Page ===== */
    .frame{
      max-width:1180px;
      margin:0 auto;
      padding:34px 42px 70px;
    }

    .title{
      text-align:center;
      font-weight:900;
      letter-spacing:2px;
      font-size:44px;
      margin:18px 0 6px;
    }
    .subtitle{
      text-align:center;
      color:#6f6f6f;
      font-size:20px;
      margin:0 0 18px;
      font-weight:500;
    }

    .content{
      display:grid;
      grid-template-columns: 1.1fr 0.9fr;
      gap:70px;
      align-items:start;
      margin-top:14px;
    }

    /* Left heart */
    .heartWrap{
      display:flex;
      justify-content:center;
      align-items:center;
      padding-top:10px;
    }
    .heart{
      width:520px;
      max-width:100%;
      filter: drop-shadow(0 1px 0 rgba(0,0,0,0.03));
    }

    /* Right form */
    .form{
      width:100%;
      max-width:600px;
      margin-left:auto;
      padding-top:6px;
    }

    .input{
      width:100%;
      height:56px;
      border:1px solid var(--border);
      border-radius:6px;
      padding:0 16px;
      margin:0 0 18px;
      font-size:22px;
      outline:none;
      background:#fff;
    }
    .input:focus{
      border-color:#a9a9a9;
      box-shadow:0 0 0 3px rgba(0,0,0,0.06);
    }

    .btn{
      width:100%;
      height:66px;
      border:none;
      border-radius:6px;
      color:#fff;
      font-weight:800;
      letter-spacing:1px;
      font-size:24px;
      cursor:pointer;
      background: linear-gradient(180deg, var(--btn1), var(--btn2));
      margin:10px 0 8px;
    }
    .btn:hover{ filter: brightness(1.06); }
    .btn:active{ transform: translateY(1px); }

    .or{
      display:flex;
      align-items:center;
      gap:18px;
      margin:14px 0 14px;
      color:#333;
      font-weight:700;
    }
    .or .line{
      flex:1;
      height:2px;
      background:#cfcfcf;
    }
    .or span{
      font-size:16px;
      letter-spacing:1px;
    }

    .loginRow{
      text-align:center;
      margin:6px 0 16px;
      font-size:22px;
      font-weight:800;
    }
    .loginRow a{
      color:#111;
      text-decoration:none;
      font-weight:900;
    }
    .loginRow a:hover{ text-decoration:underline; }

    .terms{
      display:flex;
      gap:14px;
      align-items:flex-start;
      font-size:18px;
      color:#222;
      margin-top:6px;
    }
    .terms input{
      margin-top:5px;
      width:24px; height:24px;
      accent-color:#111;
    }
    .terms .small{
      line-height:1.35;
    }

    /* Responsive */
    @media (max-width: 980px){
      .topbar{ padding:0 20px; }
      .brand{ font-size:34px; }
      .nav{ font-size:18px; }
      .content{ grid-template-columns:1fr; gap:26px; }
      .form{ margin:0 auto; max-width:520px; }
      .title{ font-size:38px; }
      .subtitle{ font-size:16px; }
      .input{ font-size:18px; height:52px; }
      .btn{ font-size:20px; height:60px; }
      .loginRow{ font-size:18px; }
      .terms{ font-size:16px; }
    }
  </style>
</head>

<body>
  <!-- ===== Topbar (same as before) ===== -->
  <header class="topbar">
    <div class="brand">
      <div>TRUSTMATE</div>

      <!-- small star/flower mark -->
      <svg class="mark" viewBox="0 0 64 64" aria-hidden="true">
        <g fill="#111">
          <path d="M31 2h2v60h-2z"/>
          <path d="M2 31h60v2H2z"/>
          <path d="M10 10l1.4-1.4L54 51.2 52.6 52.6z"/>
          <path d="M52.6 10L54 11.4 11.4 54 10 52.6z"/>
          <path d="M6 22l.7-1.9 52.6 20-.7 1.9z"/>
          <path d="M6.7 42.9l-.7-1.9 52.6-20 .7 1.9z"/>
        </g>
      </svg>
    </div>

    <nav class="nav">
      <span class="dropdown">Trustmate PRO <i class="caret"></i></span>
      <span class="dropdown">Explore <i class="caret"></i></span>
      <a href="/become_a_seller">Become a Seller</a>
      <a href="/login">Login</a>
      <a href="/register">Sign up</a>
    </nav>
  </header>

  <main class="frame">
    <div class="title">BECOME A SELLER</div>
    <div class="subtitle">Sign up to offer your services locally</div>

    <section class="content">
      <!-- LEFT: Heart -->
      <div class="heartWrap">
        <svg class="heart" viewBox="0 0 720 560" role="img" aria-label="Support Local">
          <path
            d="M360 520
               C 360 520, 70 350, 70 190
               C 70 110, 130 60, 205 60
               C 270 60, 320 95, 360 140
               C 400 95, 450 60, 515 60
               C 590 60, 650 110, 650 190
               C 650 350, 360 520, 360 520 Z"
            fill="#D72A88"
          />

          <text x="215" y="265"
                font-size="110"
                font-weight="800"
                fill="#2A1946"
                transform="rotate(-6 215 265)"
                style="font-family: Inter, system-ui, sans-serif;">
            Support
          </text>

          <text x="230" y="385"
                font-size="140"
                font-weight="900"
                fill="#ffffff"
                transform="rotate(-6 230 385)"
                style="font-family: Inter, system-ui, sans-serif;">
            Local
          </text>

          <path d="M420 250 C 470 270, 500 315, 492 350"
                fill="none"
                stroke="#fff"
                stroke-width="18"
                stroke-linecap="round"
                opacity="0.95"/>
        </svg>
      </div>

      <!-- RIGHT: Form -->
      <% const messages = locals.messages || []; %>

      <% if (messages.length > 0) { %>
       <div style="border:1px solid #ff9aa7;background:#ffe6ea;color:#b1001a;padding:12px 14px;border-radius:8px;margin-bottom:18px;">
        <% messages.forEach(function(m){ %>
         <div><%= m %></div>
        <% }) %>
       </div>
      <% } %>

        <form action="/seller/register" method="POST">
          <input class="input" type="text" name="username" placeholder="Username" required>
          <input class="input" type="text" name="identifier" placeholder="Phone Number/email" required>
          <input class="input" type="text" name="verificationCode" placeholder="verification code" required>
          <input class="input" type="password" name="password" placeholder="password" required>
          <input class="input" type="password" name="confirmPassword" placeholder="confirm password" required>

          <button class="btn" type="submit">NEXT</button>

          <div class="or">
            <div class="line"></div>
            <span>OR WITH</span>
            <div class="line"></div>
          </div>

          <div class="loginRow">
            Have an account? <a href="/login">login</a>
          </div>

          <label class="terms">
            <input type="checkbox" name="agree" required>
            <div class="small">
              By registering, You agree to the Terms,<br/>
              Conditions and Policies of&nbsp; Local Help
            </div>
          </label>
        </form>
      </div>
    </section>
  </main>
</body>
</html>
