<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details - FreshMart</title>
    <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .product-detail-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 40px 20px;
        }
        .product-detail-card {
            background-color: var(--white);
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }
        .product-detail-image {
            text-align: center;
        }
        .product-detail-image img {
            max-width: 100%;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .product-detail-info h1 {
            font-size: 32px;
            margin-bottom: 20px;
            color: var(--text-dark);
        }
        .product-detail-price {
            font-size: 36px;
            font-weight: bold;
            color: var(--primary);
            margin-bottom: 20px;
        }
        .product-detail-item {
            padding: 15px 0;
            border-bottom: 1px solid var(--light-gray);
        }
        .product-detail-item:last-child {
            border-bottom: none;
        }
        .product-detail-label {
            font-size: 14px;
            color: var(--dark-gray);
            margin-bottom: 5px;
        }
        .product-detail-value {
            font-size: 18px;
            font-weight: 500;
            color: var(--text-dark);
        }
        
        /* Review Section Styles */
        .review-section {
            margin-top: 60px;
        }
        .review-card {
            background: var(--white);
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .review-header {
            font-size: 28px;
            margin-bottom: 30px;
            color: var(--text-dark);
            border-bottom: 2px solid var(--light-gray);
            padding-bottom: 15px;
        }

        .rating-summary {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .rating-number {
            font-size: 48px;
            font-weight: bold;
            color: var(--text-dark);
            line-height: 1;
        }

        .stars-large {
            display: flex;
            gap: 5px;
            font-size: 24px;
        }

        .star-gold {
            color: #ffb400;
        }

        .star-muted {
            color: #ddd;
        }

        .review-count {
            color: var(--dark-gray);
            font-size: 16px;
        }

        .review-form-container {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 25px;
            margin: 30px 0;
        }

        .star-rating-input {
            display: flex;
            gap: 10px;
            font-size: 32px;
            margin: 15px 0;
            flex-direction: row-reverse;
            justify-content: flex-end;
        }

        .star-rating-input label {
            cursor: pointer;
            color: #ddd;
            transition: color 0.2s, transform 0.2s;
        }

        .star-rating-input label:hover {
            transform: scale(1.1);
        }

        .star-rating-input input:checked ~ label {
            color: #ffb400 !important;
        }

        .star-rating-input label:hover,
        .star-rating-input label:hover ~ label {
            color: #ffb400 !important;
        }

        .review-item {
            border-bottom: 1px solid var(--light-gray);
            padding: 25px 0;
        }

        .review-item:last-child {
            border-bottom: none;
        }

        .reviewer-info {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .reviewer-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
        }

        .reviewer-name {
            font-weight: bold;
            font-size: 18px;
            color: var(--text-dark);
        }

        .verified-badge {
            background: var(--success);
            color: white;
            font-size: 12px;
            padding: 3px 10px;
            border-radius: 12px;
            margin-left: 10px;
        }

        .review-date {
            color: var(--dark-gray);
            font-size: 14px;
        }

        .review-text {
            font-size: 16px;
            line-height: 1.6;
            color: var(--text-dark);
            margin: 15px 0;
            white-space: pre-wrap;
            word-break: break-word;
        }

        .helpful-button {
            background: none;
            border: 1px solid var(--light-gray);
            padding: 8px 20px;
            border-radius: 20px;
            color: var(--dark-gray);
            cursor: pointer;
            transition: all 0.2s;
            font-size: 14px;
        }

        .helpful-button:hover {
            border-color: var(--primary);
            color: var(--primary);
            background: rgba(37, 99, 235, 0.1);
        }

        .helpful-count {
            margin-left: 5px;
            font-weight: 500;
        }

        .login-prompt {
            text-align: center;
            padding: 40px;
            background: #f8f9fa;
            border-radius: 10px;
            margin: 30px 0;
        }

        .empty-reviews {
            text-align: center;
            padding: 60px 20px;
        }

        .review-actions {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        textarea.review-comment {
            width: 100%;
            padding: 15px;
            border: 1px solid var(--light-gray);
            border-radius: 8px;
            font-size: 16px;
            resize: vertical;
            min-height: 120px;
            font-family: inherit;
        }

        textarea.review-comment:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-success {
            background-color: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #166534;
        }

        .alert-danger {
            background-color: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #991b1b;
        }

        @media (max-width: 768px) {
            .product-detail-card {
                grid-template-columns: 1fr;
            }
            
            .rating-summary {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
            
            .reviewer-info {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
            
            .review-actions {
                flex-direction: column;
            }
            
            .review-actions .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { user: user, currentPage: 'product' }) %>
    
    <!-- Main Content -->
    <div class="product-detail-container">
        <div style="margin-bottom: 30px;">
            <a href="<%= user && user.role === 'admin' ? '/inventory' : '/shopping' %>" 
               style="color: var(--primary); text-decoration: none;">
                <i class="fas fa-arrow-left"></i> Back to <%= user && user.role === 'admin' ? 'Inventory' : 'Shopping' %>
            </a>
        </div>
        
        <% if (product) { %>
            <div class="product-detail-card">
                <div class="product-detail-image">
                    <img src="../images/<%= product.image %>" alt="<%= product.productName %>"
                         onerror="this.src='https://via.placeholder.com/400x400?text=No+Image'">
                </div>
                
                <div class="product-detail-info">
                    <h1><%= product.productName %></h1>
                    
                    <div class="product-detail-price">
                        $<%= parseFloat(product.price).toFixed(2) %>
                    </div>
                    
                    <div class="product-detail-item">
                        <div class="product-detail-label">
                            <i class="fas fa-box"></i> Stock Availability
                        </div>
                        <div class="product-detail-value">
                            <% if (product.quantity > 50) { %>
                                <span style="color: var(--success);">
                                    <i class="fas fa-check-circle"></i> In Stock (<%= product.quantity %> available)
                                </span>
                            <% } else if (product.quantity > 0) { %>
                                <span style="color: var(--warning);">
                                    <i class="fas fa-exclamation-triangle"></i> Low Stock (<%= product.quantity %> remaining)
                                </span>
                            <% } else { %>
                                <span style="color: var(--danger);">
                                    <i class="fas fa-times-circle"></i> Out of Stock
                                </span>
                            <% } %>
                        </div>
                    </div>
                    
                    <% if (product.category) { %>
                        <div class="product-detail-item">
                            <div class="product-detail-label">
                                <i class="fas fa-tags"></i> Category
                            </div>
                            <div class="product-detail-value">
                                <%= product.category %>
                            </div>
                        </div>
                    <% } %>
                    
                    <div class="product-detail-item">
                        <div class="product-detail-label">
                            <i class="fas fa-barcode"></i> Product ID
                        </div>
                        <div class="product-detail-value">
                            #<%= product.id %>
                        </div>
                    </div>
                    
                    <% if (user && user.role === 'user' && product.quantity > 0) { %>
                        <div style="margin-top: 30px;">
                            <form action="/add-to-cart/<%= product.id %>" method="POST">
                                <div style="display: flex; gap: 15px; margin-bottom: 15px; align-items: center;">
                                    <label style="font-size: 1rem; color: var(--dark-gray); white-space: nowrap;">Quantity:</label>
                                    <input 
                                        type="number" 
                                        name="quantity" 
                                        class="form-control" 
                                        style="flex: 1;" 
                                        value="1" 
                                        min="1" 
                                        max="<%= product.quantity %>"
                                        required
                                    >
                                    <span style="font-size: 0.95rem; color: var(--dark-gray); white-space: nowrap;">/ <%= product.quantity %> available</span>
                                </div>
                                <button type="submit" class="btn" style="width: 100%; font-size: 18px; padding: 15px;">
                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                </button>
                            </form>
                        </div>
                    <% } %>
                    
                    <% if (user && user.role === 'admin') { %>
                        <div style="margin-top: 30px; display: flex; gap: 15px;">
                            <a href="/updateProduct/<%= product.id %>" class="btn" style="flex: 1; text-align: center;">
                                <i class="fas fa-edit"></i> Edit Product
                            </a>
                            <a href="/deleteProduct/<%= product.id %>" 
                               class="btn btn-danger" 
                               style="flex: 1; text-align: center;"
                               onclick="return confirm('Are you sure you want to delete this product?');">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <!-- ================= Reviews & Ratings Section ================= -->
            <!-- Initialize review variables if not passed from backend -->
            <% 
                // Default values if not provided
                if (typeof reviews === 'undefined') reviews = [];
                if (typeof avgRating === 'undefined') avgRating = 0;
                if (typeof reviewCount === 'undefined') reviewCount = 0;
                if (typeof userReview === 'undefined') userReview = null;
            %>
            
            <div class="review-section">
                <div class="review-card">
                    <!-- Review Header -->
                    <h2 class="review-header">Customer Reviews</h2>
                    
                    <!-- Average Rating Summary -->
                    <div class="rating-summary">
                        <div class="rating-number"><%= avgRating ? avgRating.toFixed(1) : '0.0' %></div>
                        <div>
                            <div class="stars-large">
                                <% for(let i=1; i<=5; i++){ %>
                                    <i class="fas fa-star <%= avgRating >= i ? 'star-gold' : 'star-muted' %>"></i>              
                                <% } %>
                            </div>
                            <div class="review-count">
                                Based on <%= reviewCount %> <%= reviewCount === 1 ? 'review' : 'reviews' %>
                            </div>
                        </div>
                    </div>

                    <!-- Review Form (for logged-in customers) -->
                    <% if(user && user.role === 'user'){ %>
                        <div class="review-form-container">
                            <h3 style="font-size: 20px; margin-bottom: 20px; color: var(--text-dark);">
                                <%= userReview ? 'Update Your Review' : 'Write a Review' %>
                            </h3>
                            
                            <!-- Flash Messages -->
                            <% if (messages && messages.error) { %>
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
                                </div>
                            <% } %>
                            <% if (messages && messages.success) { %>
                                <div class="alert alert-success">
                                    <i class="fas fa-check-circle"></i> <%= messages.success %>
                                </div>
                            <% } %>
                            
                            <form method="POST" action="/product/<%= product.id %>/review" style="width: 100%;">
                                <input type="hidden" name="rating" id="ratingInput" 
                                       value="<%= userReview ? userReview.rating : '0' %>">
                                
                                <!-- Star Rating -->
                                <div style="margin-bottom: 20px;">
                                    <label style="display: block; margin-bottom: 10px; color: var(--dark-gray); font-weight: 500;">
                                        Your Rating:
                                    </label>
                                    <div class="star-rating-input">
                                        <% for(let i=5; i>=1; i--){ %>
                                            <input type="radio" id="star<%= i %>" name="star" value="<%= i %>" 
                                                   <%= userReview && userReview.rating == i ? 'checked' : '' %> 
                                                   style="display: none;">
                                            <label for="star<%= i %>" 
                                                   data-value="<%= i %>">
                                                â˜…
                                            </label>
                                        <% } %>
                                    </div>
                                    <div style="color: var(--dark-gray); font-size: 14px; margin-top: 5px;">
                                        <span id="rating-text">
                                            <%= userReview ? (userReview.rating == 5 ? 'Excellent' : 
                                                              userReview.rating == 4 ? 'Very Good' : 
                                                              userReview.rating == 3 ? 'Good' : 
                                                              userReview.rating == 2 ? 'Fair' : 
                                                              userReview.rating == 1 ? 'Poor' : 'Select a rating') : 'Select a rating' %>
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Review Comment -->
                                <div style="margin-bottom: 20px;">
                                    <label for="comment" style="display: block; margin-bottom: 10px; color: var(--dark-gray); font-weight: 500;">
                                        Your Review:
                                    </label>
                                    <textarea name="comment" id="comment" 
                                              placeholder="Share your experience with this product... What did you like or dislike? Would you recommend it to others?"
                                              class="review-comment"><%= userReview ? userReview.comment : '' %></textarea>
                                    <div style="font-size: 14px; color: var(--dark-gray); margin-top: 5px;">
                                        Minimum 10 characters required
                                    </div>
                                </div>
                                
                                <!-- Submit Button -->
                                <div class="review-actions">
                                    <button type="submit" class="btn" style="font-size: 18px; padding: 12px 30px;">
                                        <i class="fas fa-paper-plane"></i> 
                                        <%= userReview ? 'Update Review' : 'Submit Review' %>
                                    </button>
                                    
                                    <% if(userReview){ %>
                                        <a href="/product/<%= product.id %>" class="btn btn-secondary" style="font-size: 18px; padding: 12px 30px;">
                                            <i class="fas fa-times"></i> Cancel Edit
                                        </a>
                                    <% } %>
                                </div>
                            </form>
                        </div>
                    <% } else if(!user){ %>
                        <div class="login-prompt">
                            <i class="fas fa-sign-in-alt" style="font-size: 48px; color: var(--dark-gray); margin-bottom: 20px;"></i>
                            <p style="font-size: 18px; color: var(--dark-gray); margin-bottom: 20px;">
                                Please log in to write a review
                            </p>
                            <a href="/login" class="btn" style="font-size: 16px; padding: 10px 25px;">
                                <i class="fas fa-sign-in-alt"></i> Login to Review
                            </a>
                        </div>
                    <% } %>

                    <!-- Reviews List -->
                    <div style="margin-top: 40px;">
                        <h3 style="font-size: 22px; margin-bottom: 25px; color: var(--text-dark);">
                            Customer Reviews
                        </h3>
                        
                        <% if(reviews.length === 0){ %>
                            <div class="empty-reviews">
                                <i class="fas fa-comments" style="font-size: 64px; color: var(--dark-gray); margin-bottom: 20px;"></i>
                                <p style="font-size: 18px; color: var(--dark-gray);">No reviews yet. Be the first to share your thoughts!</p>
                            </div>
                        <% } else { %>
                            <% reviews.forEach(r => { %>
                                <div class="review-item">
                                    <div class="reviewer-info">
                                        <div class="reviewer-avatar">
                                            <%= r.username ? r.username.charAt(0).toUpperCase() : 'U' %>
                                        </div>
                                        <div style="flex: 1;">
                                            <div style="display: flex; align-items: center; gap: 10px; flex-wrap: wrap;">
                                                <span class="reviewer-name"><%= r.username || 'Anonymous' %></span>
                                                <% if(r.verified){ %>
                                                    <span class="verified-badge">
                                                        <i class="fas fa-check"></i> Verified Purchase
                                                    </span>
                                                <% } %>
                                            </div>
                                            <div class="review-date">
                                                <%= r.created_at ? new Date(r.created_at).toLocaleDateString('en-US', { 
                                                    year: 'numeric', 
                                                    month: 'long', 
                                                    day: 'numeric' 
                                                }) : 'Recently' %>
                                            </div>
                                        </div>
                                        <div style="display: flex; gap: 5px;">
                                            <% for(let i=1; i<=5; i++){ %>
                                                <i class="fas fa-star <%= r.rating >= i ? 'star-gold' : 'star-muted' %>"></i>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <div class="review-text">
                                        <%= r.comment || 'No comment provided.' %>
                                    </div>
                                    
                                    <div>
                                        <form method="POST" action="/review/<%= r.review_id || r.id %>/helpful" style="display: inline;">
                                            <button type="submit" class="helpful-button">
                                                <i class="fas fa-thumbs-up"></i> 
                                                Helpful <span class="helpful-count">(<%= r.helpfulCount || 0 %>)</span>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 80px 20px;">
                <i class="fas fa-box-open" style="font-size: 80px; color: var(--dark-gray); margin-bottom: 20px;"></i>
                <h2 style="color: var(--text-dark);">Product Not Found</h2>
                <p style="color: var(--dark-gray); font-size: 18px;">The product you're looking for doesn't exist.</p>
            </div>
        <% } %>
    </div>
    
    <%- include('partials/footer', { user: user }) %>
    
    <script src="/js/main.js"></script>

    <!-- JavaScript for Star Rating -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ratingInput = document.getElementById('ratingInput');
            const ratingText = document.getElementById('rating-text');
            const starLabels = document.querySelectorAll('.star-rating-input label');
            
            const ratingDescriptions = {
                '1': 'Poor',
                '2': 'Fair', 
                '3': 'Good',
                '4': 'Very Good',
                '5': 'Excellent'
            };
            
            // Initialize if there's a pre-selected rating
            if (ratingInput && ratingInput.value > 0) {
                updateStars(ratingInput.value);
                if (ratingText) {
                    ratingText.textContent = ratingDescriptions[ratingInput.value];
                }
            }
            
            // Add click events to stars
            starLabels.forEach(label => {
                label.addEventListener('click', function() {
                    const value = this.getAttribute('data-value');
                    if (ratingInput) {
                        ratingInput.value = value;
                    }
                    if (ratingText) {
                        ratingText.textContent = ratingDescriptions[value];
                    }
                    updateStars(value);
                });
                
                // Add hover effects
                label.addEventListener('mouseenter', function() {
                    const value = this.getAttribute('data-value');
                    previewStars(value);
                });
                
                label.addEventListener('mouseleave', function() {
                    const currentValue = ratingInput ? ratingInput.value : '0';
                    updateStars(currentValue);
                });
            });
            
            // Update all stars to match rating
            function updateStars(value) {
                starLabels.forEach(label => {
                    const labelValue = label.getAttribute('data-value');
                    label.style.color = labelValue <= value ? '#ffb400' : '#ddd';
                });
            }
            
            // Preview stars on hover
            function previewStars(value) {
                starLabels.forEach(label => {
                    const labelValue = label.getAttribute('data-value');
                    label.style.color = labelValue <= value ? '#ffb400' : '#ddd';
                });
            }
            
            // Form validation
            const reviewForm = document.querySelector('form[action*="/review"]');
            if (reviewForm) {
                reviewForm.addEventListener('submit', function(e) {
                    if (ratingInput && ratingInput.value === '0') {
                        e.preventDefault();
                        alert('Please select a star rating before submitting.');
                        return false;
                    }
                    
                    const comment = document.getElementById('comment');
                    if (comment && comment.value.trim().length < 10) {
                        e.preventDefault();
                        alert('Please write a review of at least 10 characters.');
                        comment.focus();
                        return false;
                    }
                });
            }
        });
    </script>
</body>
</html> 